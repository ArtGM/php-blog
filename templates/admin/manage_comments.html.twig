{% extends 'admin/dashboard.html.twig' %}

{% block admin_content %}
    <h4>Gestion des commentaires</h4>
    <div class="table-wrapper">
        <table>
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Commentaire</th>
                <th scope="col">Auteur</th>
                <th scope="col">Date</th>
                <th scope="col">Article</th>
                <th scope="col">Statut</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in list_comments %}

            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.userName }}</td>
                <td>{{ comment.createTime | date("m F Y") }}</td>
                <td>{{ comment.postTitleComment }}</td>
                <td>{% if comment.commentStatusId == '0' %}En Attente {% else %}<strong>Publi√©</strong>{% endif %}</td>
                <td>
                    {% if comment.commentStatusId == '1' %}
                        <a href="/admin/approvecomment/{{ comment.id }}"><strong>Approuver</strong></a><br>{% endif %}
                    <a class="delete-comment" href="/admin/deletecomment/{{ comment.id }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
    </div>
{% endblock %}