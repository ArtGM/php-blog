{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <h1>Liste des articles</h1>

    </div>
    <div class="row">
        {% for post in posts %}
            <div class="col-4 mb-2">
                <div class="card">
                    <img src="https://picsum.photos/200" class="card-img-top" alt="dummy">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
                        <a href="/{{ post.id }}-{{ post.Slug() }}" class="btn btn-primary">Lire l'article</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}