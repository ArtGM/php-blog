{% extends 'base.html.twig' %}

{% block content %}

    <form id="register" action="/register" method="post" novalidate>
        <div class="fields">
            <div class="field half">
                <label for="username" class="col-form-label">Nom d'utilisateur</label>
                <input class="form-control" type="text" name="username" id="username" value="{{ user.username }}"
                    >
                    {% if errors.username %}
                        <div class="alert alert-danger">
                            {{ errors.username }}
                        </div>
                    {% endif %}
            </div>
            <div class="field half">
                <label for="user_email" class="col-form-label">Email</label>
                <input type="email" class="form-control" id="user_email" name="user_email"
                       value="{{ user.user_email }}">
                    {% if errors.user_email %}
                        <div class="alert alert-danger">
                            {{ errors.user_email }}
                        </div>
                    {% endif %}
            </div>
            <div class="field">
                <label for="password" class="col-form-label">Mot de passe</label>
                <input class="form-control" type="password" name="password" id="password">
            </div>
            {% if errors.password %}
                    <div class="alert alert-danger">
                        {{ errors.password }}
                    </div>
                {% endif %}
        </div>
        <ul class="actions">
            <li><input class="primary" type="submit" value="s'inscrire"></li>
        </ul>
    </form>

{% endblock %}
